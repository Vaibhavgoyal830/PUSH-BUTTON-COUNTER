int tempPin = A0;  // LM35 output connected to A0

void setup() {
  Serial.begin(9600);
}

void loop() {
  int reading = analogRead(tempPin);         // Read ADC value
  float voltage = reading * (5.0 / 1023.0);  // Convert to voltage
  float temperatureC = voltage * 100.0;      // LM35 gives 10mV/°C

  Serial.print("Temperature: ");
  Serial.print(temperatureC);
  Serial.println(" °C");

  delay(1000);  // Read every second
}
